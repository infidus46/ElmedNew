                            </dxg:TreeListControl.View>
                        </dxg:TreeListControl>
                    </Grid>
                </dxdo:LayoutPanel>
                <dxdo:LayoutPanel Caption="Сетка расписания" ShowBorder="False"  AllowClose="False" AllowMove="False" AllowHide="False" AllowFloat="False" >
